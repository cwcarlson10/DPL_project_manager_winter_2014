<%= simple_form_for [@project, @task] do |f| %>

  <%= f.input :title %>

  <%= f.input :description %>

  <%= f.input :deadline %>

  <%= f.input :is_completed, as: :check_boxes %>

  <%= f.input :assignment, collection: :user_id, label_method: @user, value_method: :id %>

  <%= f.submit %>
<% end %>